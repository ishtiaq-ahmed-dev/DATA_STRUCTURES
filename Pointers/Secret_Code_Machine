#include <iostream>
using namespace std;

int secret_code(int a){
    int key=1;
    int inputed_number = a;
    for (int i = 1; i <= a; i++){
        key *= inputed_number;
        inputed_number--;
    }
    return key;
}


int main() {
    int (*ptr_secret_code)(int) = secret_code;

    int num;
    cout << "Enter a number: ";
    cin >> num;
    int secret_key = ptr_secret_code(num);
    cout << "The secret key is: " << secret_key <<"\n";
   
    return 0;
}
